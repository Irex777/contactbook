<div class="w3-card-2">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Name:</strong>
    <%= @contact.name %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= @contact.address %>
  </p>

  <p>
    <strong>City:</strong>
    <%= @contact.city %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= @contact.phone %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @contact.email %>
  </p>
  <p>
  <%= link_to 'Edit', edit_contact_path(@contact), class:'w3-btn w3-grey w3-round w3-text-white ' %>
  <%= link_to 'Back', contacts_path, class:'w3-btn w3-grey w3-round w3-text-white' %>
  </p>
</div>